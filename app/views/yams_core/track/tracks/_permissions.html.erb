<div class="card">

  <%= form.label t(:permissions, scope: :global) %>

  <div class="card-body text-left pt-2">

    <% info = {
        'radio': 'Available to any visitor for free, including Radio.',
        'free':  'Available to any visitor for free, including Radio.',
        'download': 'Available for download by registered users, a fee may apply',
        'playlist': 'Available for visitors to add to personal playlists, a fee may apply',
        'stream': 'Available for streaming by registered users, a micro fee may apply'
    }  %>

    <% YamsCore::Available.modes.keys.each do |c|  %>

      <div class="row pl-2">
        <div class="col-1">
          <%= check_box_tag "availables[#{c}]", 'true', @track.available_for?(c) %>
        </div>
        <div class="col-9 pl-2">
          <%= form.label c, class: 'inner-label', 'data-toggle': "tooltip", 'data-placement': "left", title: info[c.to_sym] %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
	$(function () {
		$('[data-toggle="tooltip"]').tooltip()
	})
</script>


