<% # The JS needs to access the LIST index (not Rails DB Id) hence track_counter %>
<li class="article w-inline-block w-clearfix" id="track-<%= track_counter %>" onclick="datashift_audio_playlist_onclick_handler(this)" >
    <div class="image-wrapper"> <%= image_tag(rails_blob_path(track.cover_image, only_path: true), width: '80px', class: "thumbnail") %></div>
    <section class="article-text-wrapper w-clearfix pt-4">
      <div class="row w-100 text-center">
        <% if current_user %>
          <div class="col-3 p-0 m-0 datashift-audio-track-details">
            <%= link_to(track.artist_name, yams_core.artist_path(track.artist), class: "datashift-audio-full-name") %>
          </div>
          <div class="col-5 p-0 m-0 datashift-audio-track-details">
            <%= link_to(track.title, yams_core.track_path(track), class: "datashift-audio-track-title") %>
          </div>
        <% else %>
          <div class="col-3 p-0 m-0 datashift-audio-track-details"><%= track.artist_name %></div>
          <div class="col-5 p-0 m-0 datashift-audio-track-details"><%= track.title %></div>
        <% end %>
        <div class="col-3 p-0 m-0 datashift-audio-track-details"><%= track.display_duration %></div>
      </div>
      <div class="article-info-wrapper pt-1">
        <div class="article-info-text"><%= track.created_at.to_s(:short) %></div>
        <% track.tag_list.each do |t| %><div class="article-info-text tag"><%= t %></div><% end %>
      </div>
    </section>
</li>
