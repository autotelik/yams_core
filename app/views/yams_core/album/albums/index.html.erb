<% content_for :audio_player_in_navbar do %>
  <%= turbo_frame_tag "yams-player-in-navbar" do %>
    <%= render partial: 'yams_audio/shared/player', locals: { track: @track } %>
  <% end %>
<% end %>

<div class="row" data-controller="yams-albums">
  <div id="playlist-playlists-index" class="col-3 sidebar">

    <div class="card">
      <%= bootstrap_card_header( t(:albums, scope: :global)) %>

      <div class="card-body">
        <ul>
          <% @albums.each do |album| %>
            <li id="album_row_<%= album.id %>" class="mt-4">
              <div class="row align-middle">
                <div class="col-2">
                  <%= album.cover_image_tag %>
                </div>
                <div class="col-10 pt-3">
                  <%= link_to(album.name, yams_core.album_url(album), 'data-turbo-frame': "yams-selected-album-track-listing") %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div> <!-- end album column -->

  <div id="yams-audio-album-wrapper" class="col-9">
    <%= render partial: 'show.html' %>
  </div>

</div>

