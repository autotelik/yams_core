<div class="row">

  <div class="col-12">

    <div class="card">
      <%= bootstrap_card_header( t(:playlists, scope: :global)) %>

      <div class="card-body pt-4">
        <div class="row">

          <div class="col"><h5 class="playlist-track">Create Playlist</h5></div>
          <a data-toggle="collapse" href="#toggle-new-playlist-form" aria-expanded="true">
            <div class="col"><i class="icon-chevron-small-right" style="border: 2px solid;"></i></div>
          </a>
        </div>

        <div id="toggle-new-playlist-form" class="collapse show col-12 playlist-track" role="tabpanel">
          <div class="media-body">
            <div class="d-flex justify-content-between">
              <div class="col-12">
                <%= render(partial: 'yams_core/playlist/playlists/form', locals: { playlist: YamsCore::Playlist.new }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row pt-4">

  <div class="col-12">

    <div class="card">

      <%= bootstrap_card_header( t(:manage, scope: :global)) %>

      <div class="card-body pt-4">
        <ul id="playlist-management-dashboard-with-dropzone" class="striped-list list-group list-group-flush">

          <!-- Target for dynamic CREATE - new playlist from remote controller-->
          <div id="target-for-playlist-create-insertion-point">
          </div>

          <!-- Playlist Management - with drag and drop track section-->
          <% playlists.each do |playlist| %>
            <li id="playlist_row_<%= playlist.id %>" class="pb-4">
              <%= render(partial: 'yams_core/playlist/playlist_with_dropzone', locals: { playlist: YamsCore::PlaylistPresenter.new(playlist, self) }) %>
            </li>
          <% end %>

        </ul>
      </div>

    </div>
  </div>
</div>

