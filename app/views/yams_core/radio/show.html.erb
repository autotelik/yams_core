<% content_for :audio_player_in_navbar do %>
  <%= turbo_frame_tag "yams-player-in-navbar" do %>
    <%= render partial: 'yams_audio/shared/player', locals: { track: @track } %>
  <% end %>
<% end  %>

<div id="yams-audio-track-playlist-wrapper-row" class="col">
  <div class="yams-audio-playlist-content">
    <ul id="yams-audio-playlist" class="yams-audio-playlist">
      <%= render partial: 'yams_core/track/tracks/single_list_item_headers' %>

      <%= turbo_frame_tag "radio_1", loading: "lazy", src: yams_core.radio_tracks_path do %>
        <h3>Loading...</h3>
      <% end %>
    </ul>
  </div>
</div>
