<div class="section accent">
  <div class="w-container">

    <div class="row">
      <div class="col-8 offset-2 card p-0">
        <div class="card-body">

          <h2 class="section-heading centered white mt-2 mb-2"><%= t('.panel_title') %></h2>

          <div class="row">
            <div class="col-6 offset-3 ">
              <%= devise_error_messages! %>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form col") do |f| %>

                <div class="col centered form-row pb-3 px-0">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-yams w-100', placeholder: "Your username or email" %>
                </div>

                <div class="col centered form-row pb-3 px-0">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control-yams w-100', placeholder: "Password" %>
                </div>

                <% if false && devise_mapping.rememberable? -%>
                  <div class="col form-row pb-3 px-0">
                    <div class="col-1 pl-0 pull-left">
                      <%= f.check_box :remember_me, class: 'form-control-yams pull-left' %>
                    </div>
                    <div class="col-10 pl-1 text-small">
                      Remember me on this computer
                    </div>
                  </div>
                <% end -%>

                <div class="row pull-right pt-2">
                  <%= bootstrap_submit(form: f, text: I18n.t(:sign_in, scope: :global)) %>
                </div>

              <% end %>

            </div>
          </div>
        </div>

        <div class="row pt-4 pb-4">
          <div class="col-7 text-left pl-4">
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-5 float-left p-0">
            <span class="text-question">Need an account? <%= link_to t(:sign_up, scope: :global), yams_core.new_user_registration_path, class: 'sign-up' %></span>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
